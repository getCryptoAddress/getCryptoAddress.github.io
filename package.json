    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.16.18",
    "@types/qrcode": "^1.5.0",
