    "eslint": "^8.43.0",
    "eslint-plugin-vue": "^9.15.1",
    "jsdom": "^20.0.3",
    "naive-ui": "^2.34.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "sass": "^1.63.6",
    "typescript": "^4.9.5",
    "vfonts": "^0.0.3",
    "vite": "^4.3.9",
    "vitest": "^0.32.2",
    "vue-tsc": "^1.8.1"
  }
